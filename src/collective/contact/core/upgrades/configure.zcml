<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="collective.contact.core">

  <include package="ecreall.helpers.upgrade" />

  <genericsetup:registerProfile
      name="v2"
      title="Migration profile for collective.contact.core to 2"
      directory="profiles/v2"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      for="Products.CMFPlone.interfaces.IMigratingPloneSiteRoot"
      />

  <genericsetup:upgradeStep
      title="Migration profile for collective.contact.core to 2"
      description="Upgrade from 1 to 2"
      source="1"
      destination="2"
      handler=".upgrades.v2"
      profile="collective.contact.core:default" />

  <genericsetup:upgradeStep
      title="Migration profile for collective.contact.core to 3"
      description="Upgrade from 2 to 3"
      source="2"
      destination="3"
      handler=".upgrades.v3"
      profile="collective.contact.core:default" />

</configure>